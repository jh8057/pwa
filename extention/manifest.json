{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "images/rainbow.png"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts":[
      {
        "matches":[
          "<all_urls>"
        ],
        "js" : ["content.js"]
      }
    ]
  }